<h2>{{@title}}</h2>

<!-- 'this' refers to the js file associated with this hbs file -->

<ul>
  {{#each @songs as |song|}}
    <li>
      <details>
        <summary>{{song.title}}</summary>
        {{#if song.phases}}
          <p>For: {{song.phases}}</p>
        {{/if}}
        <p>{{song.text}}</p>
      </details>
    </li>
  {{/each}}
</ul>